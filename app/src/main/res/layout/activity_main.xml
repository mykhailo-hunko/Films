<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/after"
        android:layout_width="178dp"
        android:layout_height="338dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toStartOf="@+id/super1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/after_text"
        app:srcCompat="@drawable/after" />

    <ImageView
        android:id="@+id/super1"
        android:layout_width="175dp"
        android:layout_height="336dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/after"
        app:layout_constraintTop_toBottomOf="@+id/super_text"
        app:srcCompat="@drawable/super1" />

    <TextView
        android:id="@+id/after_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:text="@string/after"
        app:layout_constraintBottom_toTopOf="@+id/after"
        app:layout_constraintEnd_toStartOf="@+id/super_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/super_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:text="@string/super1"
        app:layout_constraintBottom_toTopOf="@+id/super1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/after_text"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/detailAfter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/detail"
        app:layout_constraintEnd_toStartOf="@+id/detailSuper"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/after" />

    <Button
        android:id="@+id/detailSuper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/detail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/detailAfter"
        app:layout_constraintTop_toBottomOf="@+id/super1" />
</androidx.constraintlayout.widget.ConstraintLayout>